<p id="notice"><%= notice %></p>

<h1>Listing Component Tags</h1>

<table>
  <thead>
    <tr>
      <th>Component</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_tags.each do |component_tag| %>
      <tr>
        <td><%= component_tag.component_id %></td>
        <td><%= component_tag.tag_id %></td>
        <td><%= link_to 'Show', component_tag %></td>
        <td><%= link_to 'Edit', edit_component_tag_path(component_tag) %></td>
        <td><%= link_to 'Destroy', component_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

