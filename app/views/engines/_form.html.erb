<%= form_for(@engine) do |f| %>
  <% if @engine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@engine.errors.count, "error") %> prohibited this engine from being saved:</h2>

      <ul>
      <% @engine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="col-sm-2 col-sm-2 control-label"><%= f.label :name %></label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %><br>
    </div>
  </div>

  <div class="field">
    <label class="col-sm-2 col-sm-2 control-label"><%= f.label :image %></label>
    <div class="col-sm-10">
      <%= f.file_field :image%><br>
    </div>
  </div>

  <div class="field">
    <label class="col-sm-2 col-sm-2 control-label"><%= f.label :description %></label>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %><br>
    </div>
  </div>

  <div class="field">
    <label class="col-sm-2 col-sm-2 control-label"><%= f.label :license_id %></label>
    <div class="col-sm-10">
      <select class="form-control" id="engine_license_id" name="engine[license_id]">
        <%License.all.each do |license|%>
          <option value="<%=license.id%>"><%=license.name%></option>
        <%end%>
    </select>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
    <button  class = "btn btn-theme"><%= link_to 'Back', :back %></button>
  </div>
<% end %>
