<p id="notice"><%= notice %></p>

<h1>Listing Engine Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Engine</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @engine_ratings.each do |engine_rating| %>
      <tr>
        <td><%= engine_rating.engine_id %></td>
        <td><%= engine_rating.rating %></td>
        <td><%= link_to 'Show', engine_rating %></td>
        <td><%= link_to 'Edit', edit_engine_rating_path(engine_rating) %></td>
        <td><%= link_to 'Destroy', engine_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

