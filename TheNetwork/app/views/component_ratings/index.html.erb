<p id="notice"><%= notice %></p>

<h1>Listing Component Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Component</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_ratings.each do |component_rating| %>
      <tr>
        <td><%= component_rating.component_id %></td>
        <td><%= component_rating.rating %></td>
        <td><%= link_to 'Show', component_rating %></td>
        <td><%= link_to 'Edit', edit_component_rating_path(component_rating) %></td>
        <td><%= link_to 'Destroy', component_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Component rating', new_component_rating_path %>
