<p id="notice"><%= notice %></p>

<p>
  <strong>Engine:</strong>
  <%= @game.engine.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= @game.image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>License:</strong>
  <%= @game.license.name %>
</p>

<p>
  <strong>Comments:</strong>
  <br/>
  <% @game.game_comments.each do |comment| %>
    <%= comment.comment %>
    <br/>
  <% end %>
</p>

<p>
  <strong>Ratings:</strong>
  <br/>
  <% @game.game_ratings.each do |rating| %>
    <%= rating.rating %>
    <br/>
  <% end %>
</p>

<p>
  <strong>Tags:</strong>
  <br/>
  <% @game.game_tags.each do |tag| %>
    <%= tag.tag.name %>
    <br/>
  <% end %>
</p>

<p>
  <strong>Components:</strong>
  <br/>
  <% @game.components.each do |component| %>
    <%= component.description %>
    <br/>
  <% end %>
</p>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

<section id="main-content">
          <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Information</h3>
            <hr>
        <div class="row mt">
          <div class="col-lg-6 moreHeight">
            <div class="project-wrapper">
                        <div class="project">
                            <div class="photo-wrapper">
                                <div class="photo">
                                  <a class="fancybox" href="assets/img/portfolio/port04.jpg"><img class="img-responsive" src="../assets/img/portfolio/port04.jpg" alt=""></a>
                                </div>
                                <div class="overlay"></div>
                            </div>
                        </div>
                    </div>
          </div><!-- col-lg-4 -->

        <!-- Information Here -->
          <div class="col-lg-6 col-md-6 col-sm-12">
              <!-- Description Here -->
              <h1><%= @game.engine.name %>: <%= @game.name %></h1>
              <h3>Licencia: <%= @game.license.name %></h3>
              <p style = "font-family: Arial; font-size: 20px"><%= @game.engine.description %></p><br>
              <div class="ec-stars-wrapper">
              <% suma = 0 %>
              <% contador = 0 %>
                <% @game.game_ratings.each do |rating| %>
                  <% suma+= rating.rating %>
                  <% contador+=1 %>
                <% end %>
                <% promedio = 0 %>
                <% if contador > 0 %>
                  <% promedio = suma / contador %>
                <% end %>
                <% contador = 0 %>
                <% promedio.times do%>
                  <% contador+=1 %>
                  <ay href="#" data-value=<% contador.to_s %> >&#9733;</ay>
                <% end %>
                <% resto = 5 - promedio %>
                <% resto.times do%>
                  <ab href="#" data-value="1">&#9733;</ab>
                <% end %>
              </div>
              <label><%=promedio %>/5</label><br>
              <label>general rating</label><br>
              <button type="button" class="btn btn-primary">View Games</button>
            </div>
          
        </div><!-- /row --><br>


        <h3><i class="fa fa-angle-right"></i> Modules</h3>
        <hr>
        <% @game.components.each do |component| %>
          <div class="row mt">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 desc">
              <div class="project-wrapper">
                          <div class="project">
                              <div class="photo-wrapper">
                                  <div class="photo">
                                    <a class="fancybox" href="assets/img/portfolio/port05.jpg"><img class="img-responsive" src="../assets/img/portfolio/port05.jpg" alt=""></a>
                                  </div>
                                  <div class="overlay"></div>
                              </div>
                          </div>
                      </div>
            </div><!-- col-lg-4 -->

            <div class="col-lg-6 col-md-6 col-sm-12">
              <!-- Description Here -->
              <h2>Modulo: <%=component.name%></h2>
              <h4>License: <%=component.license.name%>
              <p style = "font-family: Arial; font-size: 18px"><%=component.description%></p><br>
              <div class="ec-stars-wrapper">
                <% suma = 0 %>
                <% contador = 0 %>
                <% component.component_ratings.each do |rating| %>
                  <% suma+= rating.rating %>
                  <% contador+=1 %>
                <% end %>
                <% promedio = 0 %>
                <% if contador > 0 %>
                  <% promedio = suma / contador %>
                <% end %>
                <% contador = 0 %>
                <% promedio.times do%>
                  <% contador+=1 %>
                  <by href="#" data-value=<% contador.to_s %> >&#9733;</by>
                <% end %>
                <% resto = 5 - promedio %>
                <% resto.times do%>
                  <bb href="#" data-value="1">&#9733;</bb>
                <% end %>
              </div>
              <label><%=promedio%>/5</label><br>
              <label>module rating</label><br>
              <button type="button" class="btn btn-primary">Read More</button>
            </div>
          
          </div><!-- /row --><br>

        <% end %>
        

        <!-- Information Here -->

        </section><! --/wrapper -->
      </section><!-- /MAIN CONTENT -->
