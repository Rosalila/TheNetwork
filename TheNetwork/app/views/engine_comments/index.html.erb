<p id="notice"><%= notice %></p>

<h1>Listing Engine Comments</h1>

<table>
  <thead>
    <tr>
      <th>Engine</th>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @engine_comments.each do |engine_comment| %>
      <tr>
        <td><%= engine_comment.engine_id %></td>
        <td><%= engine_comment.user_id %></td>
        <td><%= engine_comment.comment %></td>
        <td><%= link_to 'Show', engine_comment %></td>
        <td><%= link_to 'Edit', edit_engine_comment_path(engine_comment) %></td>
        <td><%= link_to 'Destroy', engine_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

