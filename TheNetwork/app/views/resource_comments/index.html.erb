<p id="notice"><%= notice %></p>

<h1>Listing Resource Comments</h1>

<table>
  <thead>
    <tr>
      <th>Resource</th>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_comments.each do |resource_comment| %>
      <tr>
        <td><%= resource_comment.resource_id %></td>
        <td><%= resource_comment.user_id %></td>
        <td><%= resource_comment.comment %></td>
        <td><%= link_to 'Show', resource_comment %></td>
        <td><%= link_to 'Edit', edit_resource_comment_path(resource_comment) %></td>
        <td><%= link_to 'Destroy', resource_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

