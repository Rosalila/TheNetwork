<p id="notice"><%= notice %></p>

<h1>Listing Component In Games</h1>

<table>
  <thead>
    <tr>
      <th>Component</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_in_games.each do |component_in_game| %>
      <tr>
        <td><%= component_in_game.component_id %></td>
        <td><%= component_in_game.game_id %></td>
        <td><%= link_to 'Show', component_in_game %></td>
        <td><%= link_to 'Edit', edit_component_in_game_path(component_in_game) %></td>
        <td><%= link_to 'Destroy', component_in_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

