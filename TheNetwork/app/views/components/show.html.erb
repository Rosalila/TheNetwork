          <div class="col-lg-6 col-md-6 col-sm-12">
              <!-- Description Here -->
              <h1><%= @component.name %></h1>
              <h3>Licencia: <%= @component.license.name %></h3>
              <p style = "font-family: Arial; font-size: 20px"><%= @component.description %></p><br>
              <div class="ec-stars-wrapper">
              <% suma = 0 %>
              <% contador = 0 %>
                <% @component.component_ratings.each do |rating| %>
                  <% suma+= rating.rating %>
                  <% contador+=1 %>
                <% end %>
                <% promedio = 0 %>
                <% if contador > 0 %>
                  <% promedio = suma / contador %>
                <% end %>
                <% contador = 0 %>
                <% promedio.times do%>
                  <% contador+=1 %>
                  <ay href="#" data-value=<% contador.to_s %> >&#9733;</ay>
                <% end %>
                <% resto = 5 - promedio %>
                <% resto.times do%>
                  <ab href="#" data-value="1">&#9733;</ab>
                <% end %>
              </div>
              <label><%=promedio %>/5</label><br>
              <label>general rating</label><br>
              <button type="button" class="btn btn-primary">View Games</button>
            </div>


        </div><!-- /row --><br>





