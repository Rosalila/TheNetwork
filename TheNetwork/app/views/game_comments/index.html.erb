<p id="notice"><%= notice %></p>

<h1>Listing Game Comments</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_comments.each do |game_comment| %>
      <tr>
        <td><%= game_comment.game_id %></td>
        <td><%= game_comment.user_id %></td>
        <td><%= game_comment.comment %></td>
        <td><%= link_to 'Show', game_comment %></td>
        <td><%= link_to 'Edit', edit_game_comment_path(game_comment) %></td>
        <td><%= link_to 'Destroy', game_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

