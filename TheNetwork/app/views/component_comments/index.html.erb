<p id="notice"><%= notice %></p>

<h1>Listing Component Comments</h1>

<table>
  <thead>
    <tr>
      <th>Component</th>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_comments.each do |component_comment| %>
      <tr>
        <td><%= component_comment.component_id %></td>
        <td><%= component_comment.user_id %></td>
        <td><%= component_comment.comment %></td>
        <td><%= link_to 'Show', component_comment %></td>
        <td><%= link_to 'Edit', edit_component_comment_path(component_comment) %></td>
        <td><%= link_to 'Destroy', component_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

